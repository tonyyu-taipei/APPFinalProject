<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APPFinalProject_10130492.PreferenceFragmentCompatStyle" parent="@style/PreferenceFragment">
        <item name="android:layout">@layout/sliderlayout1</item>

    </style>

    <style name="Base.Theme.APPFinalProject_10130492" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="preferenceTheme">
            @style/Base.Theme.APPFinalProject_10130492.PreferenceThemeOverlay
        </item>
    </style>

    <style name="Preference.App" parent="Preference"></style>

    <style name="Theme.APPFinalProject_10130492" parent="Base.Theme.APPFinalProject_10130492" />

    <style name="Base.Theme.APPFinalProject_10130492.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentCompatStyle">
            @style/Theme.APPFinalProject_10130492.PreferenceFragmentCompatStyle
        </item>
    </style>

    <style name="Theme.APPFinalProject_10130492.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.APPFinalProject_10130492.AppWidgetContainer" parent="Theme.APPFinalProject_10130492.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>