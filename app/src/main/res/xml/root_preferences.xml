<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/notification_header">

        <SwitchPreferenceCompat
            app:key="due_notification"
            app:summaryOff="@string/due_toggle_description_off"
            app:summaryOn="@string/due_toggle_description"
            app:title="@string/due_notification" />

        <SwitchPreferenceCompat
            app:key="late_notification"
            app:summaryOff="@string/late_notification_description_off"
            app:summaryOn="@string/late_notification_channel_description"
            app:title="@string/late_notification" />

    </PreferenceCategory>


</PreferenceScreen>